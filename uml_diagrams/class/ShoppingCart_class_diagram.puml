@startuml
class User {
    - userId : String
    - userName : String
    - userEmail : String
    + User(userId : String, userName : String, userEmail : String)
}

class Cart {
    - cartId : String
    - creationDate : Date
    + Cart(cartId : String)
    + addItem(item : Item) : void
    + removeItem(item : Item) : void
    + getItems() : List<Item>
    + getTotal() : double
}

class Item {
    - itemId : String
    - itemName : String
    - itemPrice : double
    - quantity : int
    + Item(itemId : String, itemName : String, itemPrice : double)
    + getItemPrice() : double
    + getQuantity() : int
    + setQuantity(quantity : int) : void
}

class PriceCalculator {
    + calculateTotal(cart : Cart) : double
    + calculateTax(amount : double) : double
}

